{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "strict": true,
    "types": ["vite-plugin-svgr/client"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.stories.tsx"]
}
