{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "ES5",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "baseUrl": ".",
    "jsx": "react",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts"]
}
